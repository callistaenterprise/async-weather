# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                              controllers.Application.index
GET         /location/:address             controllers.Application.getLocationForAddressGet(address: String)
GET         /weather/:address              controllers.Application.getLocationsWithWeatherGet(address: String)
POST        /weather                       controllers.Application.getLocationWithWeatherPost

GET         /weatherstream/:address        controllers.Application.getWeatherStream(address: String)
GET         /weatherws                     controllers.Application.getWeatherWs

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.at(path="/public", file)
